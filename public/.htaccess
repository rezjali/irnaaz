<IfModule mod_rewrite.c>
    Options -MultiViews
    RewriteEngine On

    # Set the correct RewriteBase for the subfolder
    RewriteBase /irnaaz/

    # Redirect requests to the front controller (index.php)
    # if the request is not for an existing file...
    RewriteCond %{REQUEST_FILENAME} !-f
    # ...or an existing directory.
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # This rule will handle all virtual paths like /login, /orders, etc.
    RewriteRule ^ index.php [L]
</IfModule>
