<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const salesData = <?php echo json_encode($monthly_sales_chart); ?>;
        const hasData = salesData.some(v => v > 0);

        if (hasData) {
            const labels = ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر', 'دی', 'بهمن', 'اسفند'];
            const data = {
                labels: labels,
                datasets: [{
                    label: 'میزان فروش (تومان)',
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    borderColor: 'rgb(59, 130, 246)',
                    data: salesData,
                    tension: 0.4,
                    fill: true,
                }]
            };
            const config = { type: 'line', data: data, options: { responsive: true, maintainAspectRatio: false } };
            new Chart(document.getElementById('salesChart'), config);
        } else {
            document.getElementById('salesChart').parentElement.innerHTML = '<div class="flex items-center justify-center h-full text-center text-gray-500"><p>داده‌ای برای نمایش نمودار در سال جاری وجود ندارد.</p></div>';
        }
    });
</script>
